{
	"name": "aggre.io",
	"private": true,
	"version": "1.0.0",
	"description": "Website for aggre",
	"scripts": {
		"start": "serve",
		"write": "cpx 'content/**' dist",
		"writing": "cpx 'content/**' dist --watch",
		"build": "rollup -c && npm run write && parcel build src/index.html && npm run render",
		"render": "node pre-render.js",
		"test": "karma start",
		"pretest": "rollup -c rollup.test.js && parcel build src/test.js",
		"lint": "tslint --fix -p ./",
		"format": "prettier --write '**/*.{json,md,js,yml,*rc}'",
		"dev:html": "parcel watch src/index.html",
		"dev:ts": "rollup -c --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aggre/aggre.io.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/aggre/aggre.io/issues"
	},
	"homepage": "https://github.com/aggre/aggre.io#readme",
	"dependencies": {
		"@types/node": "^10.12.7",
		"highlight.js": "^9.13.1",
		"js-yaml": "^3.12.0",
		"lit-html": "^0.13.0",
		"markdown-it": "^8.4.2",
		"micro": "^9.3.3",
		"rxjs": "^6.3.3",
		"serve": "^10.1.1",
		"serve-handler": "^5.0.7",
		"typescript": "^3.1.6",
		"ullr": "^0.10.1"
	},
	"devDependencies": {
		"@types/expect.js": "^0.3.29",
		"@types/highlight.js": "^9.12.3",
		"@types/js-yaml": "^3.11.2",
		"@types/markdown-it": "0.0.7",
		"@types/mocha": "^5.2.5",
		"babel-core": "^6.26.3",
		"babel-preset-env": "^1.7.0",
		"cpx": "^1.5.0",
		"expect.js": "^0.3.1",
		"karma": "^3.1.1",
		"karma-chrome-launcher": "^2.2.0",
		"karma-mocha": "^1.3.0",
		"karma-mocha-reporter": "^2.2.5",
		"list-files-in-dir": "^0.1.5",
		"mocha": "^5.2.0",
		"parcel": "^1.10.3",
		"postcss-import": "^12.0.1",
		"postcss-preset-env": "^6.4.0",
		"prettier": "^1.15.2",
		"puppeteer": "^1.10.0",
		"rollup": "^0.67.1",
		"rollup-plugin-multi-entry": "^2.0.2",
		"rollup-plugin-transform-postcss": "^1.0.5",
		"rollup-plugin-typescript": "^1.0.0",
		"tslib": "^1.9.3",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.16.0",
		"tslint-immutable": "^4.9.1",
		"tslint-plugin-prettier": "^2.0.1",
		"tslint-xo": "^0.10.0",
		"typescript-lit-html-plugin": "^0.7.0",
		"write": "^1.0.3"
	}
}
