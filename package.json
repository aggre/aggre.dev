{
	"name": "aggre.io",
	"private": true,
	"version": "1.0.0",
	"description": "Website for aggre",
	"main": "index.js",
	"scripts": {
		"start": "serve",
		"prestart": "npm run build",
		"write": "cpx 'content/**' dist",
		"writing": "cpx 'content/**' dist --watch",
		"build": "rollup -c && npm run write && parcel build src/index.html",
		"test": "karma start",
		"pretest": "rollup -c rollup.test.js && parcel build src/test.js",
		"lint": "tslint --fix -p ./",
		"format": "prettier --write '**/*.{json,md,js,yml,*rc}'",
		"dev:html": "parcel watch src/index.html",
		"dev:ts": "rollup -c --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aggre/aggre.io.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/aggre/aggre.io/issues"
	},
	"homepage": "https://github.com/aggre/aggre.io#readme",
	"dependencies": {
		"@types/marked": "^0.4.2",
		"@types/node": "^10.12.0",
		"js-yaml": "^3.12.0",
		"lit-html": "^0.12.0",
		"marked": "^0.5.1",
		"rxjs": "^6.3.3",
		"serve": "^10.0.2",
		"typescript": "^3.1.3",
		"ullr": "^0.9.4"
	},
	"devDependencies": {
		"@types/expect.js": "^0.3.29",
		"@types/js-yaml": "^3.11.2",
		"@types/mocha": "^5.2.5",
		"babel-core": "^6.26.3",
		"babel-preset-env": "^1.7.0",
		"cpx": "^1.5.0",
		"expect.js": "^0.3.1",
		"karma": "^3.1.1",
		"karma-chrome-launcher": "^2.2.0",
		"karma-mocha": "^1.3.0",
		"karma-mocha-reporter": "^2.2.5",
		"mocha": "^5.2.0",
		"parcel": "^1.10.3",
		"postcss-preset-env": "^6.2.0",
		"prettier": "^1.14.3",
		"puppeteer": "^1.9.0",
		"rollup": "^0.66.6",
		"rollup-plugin-multi-entry": "^2.0.2",
		"rollup-plugin-transform-postcss": "^1.0.5",
		"rollup-plugin-typescript": "^1.0.0",
		"tslib": "^1.9.3",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.15.0",
		"tslint-immutable": "^4.8.0",
		"tslint-plugin-prettier": "^2.0.0",
		"tslint-xo": "^0.9.0",
		"typescript-lit-html-plugin": "^0.6.0"
	}
}
