{
	"name": "aggre.io",
	"private": true,
	"version": "1.0.0",
	"description": "Website for aggre",
	"main": "serve.js",
	"scripts": {
		"start": "run-p writing serve",
		"build": "run-s write html render",
		"write": "cpx 'content/**' dist",
		"writing": "cpx 'content/**' dist --watch",
		"html": "parcel build src/index.html --no-source-maps",
		"render": "node pre-render.js",
		"test": "karma start",
		"pretest": "parcel build src/test.ts --out-dir test --no-source-maps --no-minify",
		"lint": "eslint . --ext .ts,.js --fix",
		"format": "prettier --write '**/*.{json,md,js,yml,*rc}'",
		"serve": "parcel serve src/index.html --no-source-maps"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aggre/aggre.io.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/aggre/aggre.io/issues"
	},
	"homepage": "https://github.com/aggre/aggre.io#readme",
	"dependencies": {
		"highlight.js": "10.3.2",
		"js-yaml": "3.14.0",
		"lit-html": "1.3.0",
		"lit-style": "1.1.4",
		"markdown-it": "12.0.2",
		"micro": "9.3.4",
		"postcss": "8.1.4",
		"postcss-preset-env": "6.7.0",
		"ramda": "0.27.1",
		"rxjs": "6.6.3",
		"serve": "11.3.2",
		"serve-handler": "6.1.3",
		"ullr": "0.15.5"
	},
	"devDependencies": {
		"@types/expect.js": "0.3.29",
		"@types/highlight.js": "9.12.4",
		"@types/js-yaml": "3.12.5",
		"@types/markdown-it": "10.0.2",
		"@types/mocha": "8.0.3",
		"@types/node": "13.13.5",
		"@types/ramda": "0.27.32",
		"@typescript-eslint/eslint-plugin": "4.6.1",
		"@typescript-eslint/parser": "4.6.1",
		"babel-core": "6.26.3",
		"babel-preset-env": "1.7.0",
		"cpx": "1.5.0",
		"eslint": "7.12.1",
		"eslint-config-prettier": "6.15.0",
		"eslint-plugin-functional": "3.1.0",
		"eslint-plugin-prettier": "3.1.4",
		"expect.js": "0.3.1",
		"karma": "5.2.3",
		"karma-chrome-launcher": "3.1.0",
		"karma-mocha": "2.0.1",
		"karma-mocha-reporter": "2.2.5",
		"list-files-in-dir": "0.1.5",
		"mocha": "8.2.1",
		"npm-run-all": "4.1.5",
		"parcel": "1.12.4",
		"postcss-import": "13.0.0",
		"prettier": "2.1.2",
		"puppeteer": "5.4.1",
		"tslib": "2.0.3",
		"typescript": "4.0.5",
		"typescript-lit-html-plugin": "0.9.0",
		"write": "2.0.0"
	}
}
