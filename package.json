{
	"name": "aggre.io",
	"private": true,
	"version": "1.0.0",
	"description": "Website for aggre",
	"main": "serve.js",
	"scripts": {
		"start": "run-p writing serve",
		"build": "run-s write html render",
		"write": "cpx 'content/**' dist",
		"writing": "cpx 'content/**' dist --watch",
		"html": "parcel build src/index.html --no-source-maps",
		"render": "node pre-render.js",
		"test": "karma start",
		"pretest": "parcel build src/test.ts --out-dir test --no-source-maps --no-minify",
		"lint": "tslint --fix -p ./",
		"format": "prettier --write '**/*.{json,md,js,yml,*rc}'",
		"serve": "parcel serve src/index.html --no-source-maps"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aggre/aggre.io.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/aggre/aggre.io/issues"
	},
	"homepage": "https://github.com/aggre/aggre.io#readme",
	"dependencies": {
		"highlight.js": "^9.15.8",
		"js-yaml": "^3.13.1",
		"lit-html": "^1.1.0",
		"lit-style": "^1.1.1",
		"markdown-it": "^8.4.2",
		"micro": "^9.3.4",
		"postcss": "^7.0.17",
		"postcss-preset-env": "^6.6.0",
		"ramda": "^0.26.1",
		"rxjs": "^6.5.2",
		"serve": "^11.0.1",
		"serve-handler": "^6.0.1",
		"ullr": "^0.12.5"
	},
	"devDependencies": {
		"@types/expect.js": "^0.3.29",
		"@types/highlight.js": "^9.12.3",
		"@types/js-yaml": "^3.12.1",
		"@types/markdown-it": "0.0.7",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.0.7",
		"@types/ramda": "^0.26.9",
		"babel-core": "^6.26.3",
		"babel-preset-env": "^1.7.0",
		"cpx": "^1.5.0",
		"expect.js": "^0.3.1",
		"karma": "^4.1.0",
		"karma-chrome-launcher": "^2.2.0",
		"karma-mocha": "^1.3.0",
		"karma-mocha-reporter": "^2.2.5",
		"list-files-in-dir": "^0.1.5",
		"mocha": "^6.1.4",
		"npm-run-all": "^4.1.5",
		"parcel": "^1.12.3",
		"postcss-import": "^12.0.1",
		"prettier": "^1.18.2",
		"puppeteer": "^1.17.0",
		"tslib": "^1.10.0",
		"tslint": "^5.17.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-immutable": "^6.0.0",
		"tslint-plugin-prettier": "^2.0.1",
		"tslint-xo": "^0.16.0",
		"typescript": "^3.5.1",
		"typescript-lit-html-plugin": "^0.9.0",
		"write": "^1.0.3"
	}
}
