{
	"name": "aggre.io",
	"private": true,
	"version": "1.0.0",
	"description": "Website for aggre",
	"main": "serve.js",
	"scripts": {
		"start": "run-p 'writing --watch' serve",
		"build": "run-s write html render",
		"write": "cpx 'content/**' dist",
		"html": "parcel build src/index.html --no-source-maps",
		"render": "node pre-render.js",
		"test": "karma start",
		"pretest": "rollup -c rollup.test.js && parcel build src/test.js --no-source-maps",
		"lint": "tslint --fix -p ./",
		"format": "prettier --write '**/*.{json,md,js,yml,*rc}'",
		"serve": "parcel serve src/index.html --no-source-maps"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aggre/aggre.io.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/aggre/aggre.io/issues"
	},
	"homepage": "https://github.com/aggre/aggre.io#readme",
	"dependencies": {
		"highlight.js": "^9.14.2",
		"js-yaml": "^3.12.1",
		"lit-html": "^1.0.0",
		"lit-style": "^1.1.1",
		"markdown-it": "^8.4.2",
		"micro": "^9.3.3",
		"postcss": "^7.0.14",
		"postcss-preset-env": "^6.5.0",
		"ramda": "^0.26.1",
		"rxjs": "^6.4.0",
		"serve": "^10.1.2",
		"serve-handler": "^5.0.8",
		"ullr": "^0.12.3"
	},
	"devDependencies": {
		"@types/expect.js": "^0.3.29",
		"@types/highlight.js": "^9.12.3",
		"@types/js-yaml": "^3.12.0",
		"@types/markdown-it": "0.0.7",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.9.5",
		"@types/ramda": "^0.25.50",
		"babel-core": "^6.26.3",
		"babel-preset-env": "^1.7.0",
		"cpx": "^1.5.0",
		"expect.js": "^0.3.1",
		"karma": "^4.0.0",
		"karma-chrome-launcher": "^2.2.0",
		"karma-mocha": "^1.3.0",
		"karma-mocha-reporter": "^2.2.5",
		"list-files-in-dir": "^0.1.5",
		"mocha": "^6.0.1",
		"npm-run-all": "^4.1.5",
		"parcel": "^1.11.0",
		"postcss-import": "^12.0.1",
		"prettier": "^1.16.4",
		"puppeteer": "^1.12.2",
		"rollup": "^1.2.2",
		"rollup-plugin-multi-entry": "^2.1.0",
		"rollup-plugin-typescript": "^1.0.0",
		"tslib": "^1.9.3",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-immutable": "^5.3.0",
		"tslint-plugin-prettier": "^2.0.1",
		"tslint-xo": "^0.14.0",
		"typescript": "^3.3.3333",
		"typescript-lit-html-plugin": "^0.9.0",
		"write": "^1.0.3"
	}
